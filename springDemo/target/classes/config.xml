<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--    without autowiring-->
    <bean id = "s1" class = "org.example.Student" scope="prototype">
        <property name="name" value="akash"/>
        <property name="write" ref="pen"/>
    </bean>

    <!--    with autowiring-->
    <bean id = "s2" class = "org.example.Student" autowire="byType">
        <property name="name" value="saiyan"/>
    </bean>

    <bean id = "pen" class = "org.example.Pen"/>
    <bean id = "pencil" class = "org.example.Pencil"/>
</beans>